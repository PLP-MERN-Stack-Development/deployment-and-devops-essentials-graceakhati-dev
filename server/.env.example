# Node Environment
NODE_ENV=production

# Server Port (Render uses dynamic ports - PORT will be set automatically)
PORT=10000

# MongoDB Connection String
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/bugtracker?retryWrites=true&w=majority
MONGODB_URI=mongodb_atlas_connection_string

# JWT Secret (for future authentication features)
# Generate a secure random string: openssl rand -base64 32
JWT_SECRET=secure_random_secret

# Frontend URL (for CORS configuration)
# Replace with your Vercel frontend URL after deployment
FRONTEND_URL=vercel_frontend_url

# Sentry Error Tracking (optional)
# SENTRY_DSN=your-sentry-dsn-here
